{
    "name": "creativelighthouse/silverstripe-toteam",
    "type": "silverstripe-recipe",
    "description": "An organizing tool for groups and freelancers",
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/atwx/silverstripe-projectinfo.git"
        },
        {
            "type": "git",
            "url": "https://github.com/wernerkrauss/silverstripe-ideannotator.git"
        },
        {
            "type": "git",
            "url": "https://github.com/StevenPaw/silverstripe-cms-theme.git"
        },
        {
            "type": "git",
            "url": "git@github.com:StevenPaw/silverstripe-elemental-clipboard.git"
        }
    ],
    "require": {
        "php": "^8.3",
        "silverstripe/recipe-cms": "^6.0",
        "dnadesign/silverstripe-elemental": "^6.0",
        "atwx/silverstripe-vitehelper": "^1.0",
        "ext-json": "*",
        "atwx/silverstripe-projectinfo": "dev-main",
        "symbiote/silverstripe-gridfieldextensions": "^5.0",
        "silverstripe/linkfield": "^5.0",
        "ryanpotter/silverstripe-cms-theme": "dev-master",
        "stevenpaw/silverstripe-elemental-clipboard": "dev-main"
    },
    "require-dev": {
        "silverleague/ideannotator": "dev-silverstripe6 as 4.0",
        "wernerkrauss/silverstripe-rector": "^1",
        "cambis/silverstan": "^2",
        "squizlabs/php_codesniffer": "^3",
        "phpstan/extension-installer": "^1.0",
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src/"
        }
    },
    "extra": {
        "expose": [
            "app/client/dist",
            "app/client/icons",
            "app/client/images"
        ],
        "resources-dir": "_resources",
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "scripts": {
        "lint": "vendor/bin/phpcs",
        "fix": "vendor/bin/phpcbf",
        "rector": "vendor/bin/rector -v",
        "rector-dry": "vendor/bin/rector -v --dry-run",
        "phpstan": "vendor/bin/phpstan"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        }
    }
}
